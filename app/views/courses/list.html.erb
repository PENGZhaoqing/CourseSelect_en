<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%= render "shared/sidenav" %>

    </div>
    <div class="col-sm-10">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">Course List</h3>
        </div>
        <div class="panel-body" style="min-height: 450px">
          <text style="font-size: small">
            <table class="table table-striped table-hover">
              <thead>

              <tr>
                <th>Code</th>
                <th>Course name</th>
                <th>Credit</th>
                <th>Limit</th>
                <th>Current</th>
                <th>Course Type</th>
                <th>Lecture?</th>
                <th>Exam Type</th>
                <th>Teachers</th>

              </tr>
              </thead>
              <tbody>

              <% @course.each do |course| %>
                  <tr>

                    <td><%= course.course_code %></td>
                    <td><%= course.name %></td>
                    <td><%= course.credit %></td>
                    <td><%= course.limit_num %></td>
                    <td><%= course.student_num %></td>
                    <td><%= course.course_type %></td>
                    <td><%= course.teaching_type %></td>
                    <td><%= course.exam_type %></td>
                    <td><%= course.teacher.name %></td>
                    <td><%= link_to "Join", select_course_path(course), class: 'btn-sm btn-info' %></td>

                  </tr>
              <% end %>
              </tbody>
            </table>
          </text>
        </div>
      </div>
    </div>
  </div>
</div>


